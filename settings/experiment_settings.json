{
    "experiments": [
        {
        "basic_settings": {
          "target_labelled": "telegram_gold",
          "target_unlabelled": "telegram_unlabeled",
          "sources": [
            "germeval2018", 
            "germeval2019"
        ],
        "labelled_size": 0.05,
        "unlabelled_size": 20000,
        "stratify_unlabelled": true,
        "equal_labelled_size": false,
        "epochs": 2,
        "batch_size": 8,
        "weight_decay": 0,
        "lr": 2e-5,
        "momentum": 0,
        "truncation_length" : 128,
        "lr_scheduler": true,
        "validation_split": 0.1,
        "train_split": 0.05,
        "num_workers": 2,
        "seed": 42,
        "test_after_each_epoch": true,
        "freeze_BERT_weights": true,
        "save_model": true,
        "verbose": true
        },
        "exp_settings": [
          {
            "exp_type": "DANN",
            "exp_name": "DANN_cls",
            "feature_extractor": "bert_cnn",
            "task_classifier": "DANN_task_classifier",
            "domain_classifier": "DANN_domain_classifier",
            "l1":10,
            "alpha": 0.1
          },
          
          {
            "exp_type": "DIRT_T",
            "exp_name": "DIRT_T_cls",
            "feature_extractor": "bert_cnn",
            "task_classifier": "DANN_task_classifier",
            "domain_classifier": "DANN_domain_classifier",
            "alignment_component": "DIRT_T",
            "model": "DIRT_T",
            "l1":10,
            "beta1":0.01,
            "radius": 0.01,
            "xi": 10,
            "eps": 1.0,
            "ip": 1,
            "beta_t": 0.01,
            "lambda_d": 0.01,
            "lambda_s": 0.01,
            "lambda_t": 0.01
        }
          
          
          
        ]
      }
    ]
}