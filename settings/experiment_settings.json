            "model": "DIRT_T",
            "l1":10,
            "beta1":0.01,
            "radius": 0.01,
            "xi": 10,
            "eps": 1.0,
            "ip": 1,
            "beta_t": 0.01,
            "lambda_d": 0.01,
            "lambda_s": 0.01,
            "lambda_t": 0.01
        },
        
        {
          "exp_type": "MME",
          "exp_name": "MME_cls",
