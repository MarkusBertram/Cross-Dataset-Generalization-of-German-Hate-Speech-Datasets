{
    "experiments": [
        {
        "basic_settings": {
          "target_labelled": "telegram_gold",
          "target_unlabelled": "telegram_unlabeled",
          "sources": [
            "germeval2018", 
            "germeval2019"
        ],
        "labelled_size": 0.05,
        "unlabelled_size": 20000,
        "stratify_unlabelled": true,
        "equal_labelled_size": false,
        "epochs": 2,
        "batch_size": 8,
        "weight_decay": 0,
        "lr": 2e-5,
        "momentum": 0,
        "lr_scheduler": true,
        "validation_split": 0.1,
